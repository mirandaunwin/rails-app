<div id="carouselExampleIndicators" class="carousel slide text-center" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @products.each_with_index do |product, i| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
    <% end %>
  </ol>

  <div class="carousel-inner">
    <% @products.each do |product| %>
    <div class="carousel-item<%=  " active" if product == @products.first %>">
      <%= link_to image_tag(product.image_url, class: "img-fluid", id: "carousel-images"), product_path(product) %>
      <div class="carousel-caption d-none d-md-block">
        <%= product.name %>
      </div>
    </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="row text-center">
    <div class="col-12">
      <h1>Contact</h1>
    </div>
  </div>
</div>
<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>

<div class="form-container">
  <div class="row text-center">
    <div class="col-12 col-sm-8 offset-sm-2">
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= form.label :message, class: "form-label" %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
      </div>
      <div class="form-group">
        <%= form.submit "Send", class: "btn btn-outline-secondary form_label" %>
      </div>
    </div>
  </div>
</div>

<% end %>

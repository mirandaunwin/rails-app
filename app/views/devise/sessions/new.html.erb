<div class="container">
  <div class="row text-center">
    <div class="col-12">
      <h1>Log In</h1>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="form-container">
  <div class="row text-center">
    <div class="col-12 col-sm-8 offset-sm-2">
      <div class="form-group">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "d-inline" %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class: "btn btn-outline-secondary form_label" %>
      </div>
    </div>
  </div>
</div>

<% end %>

<div class="container text-center">
  <%= render "devise/shared/links" %>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row text-center">
    <div class="col-12">
      <h1>Products</h1>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row product-grid text-center">
    <% @products.each do |product| %>
      <div class="col-sm">
        <a href="#"><h2><%= product.name %></h2></a>
        <%= image_tag(product.image_url, class: "img-fluid") %>
        <br><br>
        <p class="product-info"><%= product.description %></p>
        <p class="product-info"><%= product.colour %></p>
        <p class="product-info">â‚¬<%= product.price %></p>
        <p class="edit"><%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div><!-- /col -->
    <% end %>
  </div>
</div>

<br>

<div class="new-product">
  <%= link_to 'New Product', new_product_path %>
</div>

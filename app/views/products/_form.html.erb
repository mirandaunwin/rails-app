<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <div class="row">
      <div class="col-12 col-sm-8 offset-sm-2">
        <div class="form-group">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area(:description, size: "19x5", class: "form-control") %>
        </div>

        <div class="form-group">
          <%= form.label :image_url, class: "form-label" %>
          <%= form.text_field :image_url, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :colour, class: "form-label" %>
          <%= form.text_field :colour, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :price, class: "form-label" %>
          <%= form.text_field :price, class: "form-control" %>
        </div>

      <div class="form-group">
        <%= form.submit "Submit", class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>


<% end %>
